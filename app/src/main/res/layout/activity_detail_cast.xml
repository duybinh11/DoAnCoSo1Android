<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:background="#03A9F4"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityUser.ItemSelected">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@color/white"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Thông Tin Sản Phẩm"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TableRow>

                <TextView
                    android:text="Tên Sản Phẩm     "
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tvName"
                    android:text="Áo Teelab"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="Giá Bán"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tvCost"
                    android:text="17"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="Số Lượng"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tvSL"
                    android:text="17"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/imgIncrease"
                    android:layout_height="match_parent"
                    android:src="@drawable/plus" />

                <ImageView
                    android:id="@+id/imgMinus"
                    android:layout_width="29dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/minus" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="Đã Bán"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tvSold"
                    android:text="17"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="Ngày Bán"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:text="10/01/2004"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </TableRow>
        </TableLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Thông Tin Khuyến Mãi"
            android:textColor="#3F51B5"
            android:textSize="25sp"
            android:textStyle="bold|italic" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvGiamGia"
                    android:text="Giảm Giá     "
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvPercent"
                    android:text="20%"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </TableRow>
            <TableRow>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvStart"
                    android:text="Bắt Đầu"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvStart1"
                    android:text="10/01/2004"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </TableRow>
            <TableRow>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvEnd"
                    android:text="Kết Thúc"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvEnd1"
                    android:text="10/01/2004"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:text="Số Lượng Mua : "
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <TextView
                    android:text="2"
                    android:id="@+id/tvSlm"
                    android:textColor="#FF5722"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:text="Tổng Tiền: "
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <TextView
                    android:text="2"
                    android:id="@+id/tvMoney"
                    android:textColor="#FF5722"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <Button
                    android:text="Lưu"
                    android:id="@+id/btnSave"/>
                <Button
                    android:text="Back"
                    android:id="@+id/btnBack"/>
                <Button
                    android:text="Xóa"
                    android:id="@+id/btnDelete"/>
            </TableRow>
        </TableLayout>



    </LinearLayout>
</androidx.core.widget.NestedScrollView>